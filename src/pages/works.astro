---
import { Heading, Text, Link } from '@radix-ui/themes'
import BaseLayout from '../layouts/BaseLayout.astro'
import projects from '../data/projects.json'
---

<BaseLayout title="Wekesa - complete projects">
  <h1 class="items-start text-3xl justify-center mx-auto flex">
    Personal Projects
  </h1>
  <div class="flex items-center mt-4 container justify-center mx-auto">
    <div class="grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-2">
      <!--cards -->
      {
        projects.map(project => (
          <div class="max-w-sm p-6 border border-gray-800 rounded-lg shadow-md">
            <span
              class="w-7 h-7 text-gray-500 dark:text-gray-400 mb-3"
              role="img"
              aria-label="bug emoji"
            >
              {project.logo}
            </span>
            <Link href="#">
              <Heading as="h1">{project.title}</Heading>
            </Link>
            <Text color="gray">{project.description}</Text>

            <div class="flex flex-row space-x-2">
              <a
                target="_blank"
                href={project.link}
                class="inline-flex font-medium items-center text-blue-600 hover:underline"
              >
                Live version
                <svg
                  class="w-3 h-3 ms-2.5 rtl:rotate-[270deg]"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 18 18"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11v4.833A1.166 1.166 0 0 1 13.833 17H2.167A1.167 1.167 0 0 1 1 15.833V4.167A1.166 1.166 0 0 1 2.167 3h4.618m4.447-2H17v5.768M9.111 8.889l7.778-7.778"
                  />
                </svg>
              </a>
              <a target="_blank" href={project.github} class="hover:shadow-lg">
                <svg
                  class="w-6 h-6 text-gray-800 dark:text-white"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12.006 2a9.847 9.847 0 0 0-6.484 2.44 10.32 10.32 0 0 0-3.393 6.17 10.48 10.48 0 0 0 1.317 6.955 10.045 10.045 0 0 0 5.4 4.418c.504.095.683-.223.683-.494 0-.245-.01-1.052-.014-1.908-2.78.62-3.366-1.21-3.366-1.21a2.711 2.711 0 0 0-1.11-1.5c-.907-.637.07-.621.07-.621.317.044.62.163.885.346.266.183.487.426.647.71.135.253.318.476.538.655a2.079 2.079 0 0 0 2.37.196c.045-.52.27-1.006.635-1.37-2.219-.259-4.554-1.138-4.554-5.07a4.022 4.022 0 0 1 1.031-2.75 3.77 3.77 0 0 1 .096-2.713s.839-.275 2.749 1.05a9.26 9.26 0 0 1 5.004 0c1.906-1.325 2.74-1.05 2.74-1.05.37.858.406 1.828.101 2.713a4.017 4.017 0 0 1 1.029 2.75c0 3.939-2.339 4.805-4.564 5.058a2.471 2.471 0 0 1 .679 1.897c0 1.372-.012 2.477-.012 2.814 0 .272.18.592.687.492a10.05 10.05 0 0 0 5.388-4.421 10.473 10.473 0 0 0 1.313-6.948 10.32 10.32 0 0 0-3.39-6.165A9.847 9.847 0 0 0 12.007 2Z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</BaseLayout>
